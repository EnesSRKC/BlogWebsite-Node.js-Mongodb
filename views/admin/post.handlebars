<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
    <h1 class="text-white text-center">ADMIN</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
    <div class="container" style="margin-bottom: 40px;">

        {{> admin-nav}}

    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>TITLE</th>
                            <th>CATEGORY</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each posts}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{title}}</td>
                            <td>{{category.name}}</td>
                            <td>
                                <a href="/admin/post/edit/{{_id}}" class="btn btn-sm btn-primary">EDIT</a>
                            </td>
                            <td>
                                <!-- enctype must be set to the type you will parse before methodOverride() -->
                                <form method="POST" action="/admin/post/{{_id}}?_method=DELETE" enctype="application/x-www-form-urlencoded">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>